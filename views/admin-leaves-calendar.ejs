<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Admin Panel</title>
 <!-- Include FullCalendar CSS -->
 <link href="/node_modules/@fullcalendar/core/main.css" rel="stylesheet">
 <link href="/node_modules/@fullcalendar/daygrid/main.css" rel="stylesheet">
 <!-- Include jQuery -->
 <script src="/node_modules/jquery/dist/jquery.min.js"></script>
 <!-- Include Moment.js -->
 <script src="/node_modules/moment/min/moment.min.js"></script>
 <!-- Include FullCalendar JavaScript -->
 <script src="/node_modules/@fullcalendar/core/main.js"></script>
 <script src="/node_modules/@fullcalendar/daygrid/main.js"></script>
  <script>
    $(document).ready(function() {
      $('#calendar').fullCalendar({
        events: '/admin/leaves/date?date=<%= date %>',
        dayClick: function(date) {
          // Handle when the admin clicks on a specific date
          console.log('Date clicked:', date);
        }
      });
    });
  </script>
</head>
<body>
  <div id="calendar"></div>
</body>
</html>
